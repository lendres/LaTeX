% LISTS
\usepackage{lelists}
\setlength{\listtopsep}{0pt}
\setlength{\leftlistindent}{0pt}
\setlength{\rightlistindent}{0pt}

% Fonts
\newcommand*{\review@headingfont}{\bfseries}
\newcommand*{\reviewheading}[1]{{\review@headingfont #1}}
\newcommand*{\review@titlesize}{\fontsize{15pt}{19pt}\selectfont}

% NOTES
% Used to cite/reference other notes.
% Example:
%     \item Lorum ispum. \label{note:lorum2022a:a}
%     \item As see in \notename~\ref{note:lorum2022a:a}.
\newcommand*{\notename}{Note}
\newlength{\reviewheadingspacing}
\setlength{\reviewheadingspacing}{0.40\baselineskip}

\newenvironment{review}[2]
{
	\vspace{\reviewheadingspacing}
	\noindent{\review@titlesize\textbf{Literature Review}}\newline{}%
	\noindent\bibentry{#1}%
	\ifthenelse{\equal{#2}{}}
	{}
	{
		% When both arguments are supplied, we assume the reference is in the first one and the impression is in the second one.
		\vspace{\reviewheadingspacing}\newline{}%
		\noindent\reviewheading{Impression}\newline{}%
		#2
	}
	\vspace{\reviewheadingspacing}\newline{}%
	\noindent\reviewheading{Notes}%
	\begin{numberedlist}
}
{
	\end{numberedlist}
	\vspace{6pt plus 1pt minus 1pt}
}

\newcommand{\noreview}[1]
{
	\vspace{\reviewheadingspacing}
	\noindent{\review@titlesize\textbf{Reviewless Reference}}\newline{}%
	\noindent\bibentry{#1}\par%
	\vspace{6pt plus 1pt minus 1pt}
}

% label and Reference Commands
\newenvironment{seealsoreviews}
{
	\vspace{\reviewheadingspacing}
	\noindent{\review@titlesize\textbf{See Also}}%
	\begin{bulletedlist}
}
{
	\end{bulletedlist}
	\vspace{6pt plus 1pt minus 1pt}
}


% A hyperlink version of a custom label that allows specifying the text to display.
% Useage:
%    \customlabel{lab:name}{Text to display}
\def\customlabel#1#2{%
 \@bsphack
  \begingroup
    \def\label@name{#1}%
    \label@hook
    \protected@write\@auxout{}{%
      \string\newlabel{#1}{%
        {#2}%
        {\thepage}%
        {\@currentlabelname}%
        {\@currentHref}{}%
      }%
    }%
  \endgroup
  \@esphack
}%
