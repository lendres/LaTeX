% Extra space between letters and spaces.
\newcommand*{\wideletterspacing}{\hspace*{1.6pt}}
\newcommand*{\widespace}{\ \hspace*{0.25pt}}

% Adds a small space after every letter and space.
\def\gobblechar{\let\xchar= }
\def\assignthencheck{\afterassignment\xloop\gobblechar}
\def\xloop{%
  \ifx\relax\xchar
      \let\next=\relax
    \else
      \xchar\wideletterspacing{}\let\next=\assignthencheck
  \fi
  \next}
\def\markletters#1{\assignthencheck#1\relax}

